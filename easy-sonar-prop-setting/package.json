{
  "name": "easy-sonar-prop-setting",
  "displayName": "easy-sonar-prop-setting",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "easy-sonar-prop-setting.addSonarPath",
        "title": "Add Sonar Path"
      },
      {
        "command": "easy-sonar-prop-setting.addTestInclusion",
        "title": "Add Test Inclusion"
      },
      {
        "command": "easy-sonar-prop-setting.addTestExclusion",
        "title": "Add Test Exclusion"
      },
      {
        "command": "easy-sonar-prop-setting.clearAndAddSonarPath",
        "title": "Clear and Add Sonar Path"
      },
      {
        "command": "easy-sonar-prop-setting.clearAndAddTestInclusion",
        "title": "Clear and Add Test Inclusion"
      },
      {
        "command": "easy-sonar-prop-setting.clearAndAddTestExclusion",
        "title": "Clear and Add Test Exclusion"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "easy-sonar-prop-setting.addSonarPath",
          "group": "sonar@1"
        },
        {
          "command": "easy-sonar-prop-setting.addTestInclusion",
          "group": "sonar@2"
        },
        {
          "command": "easy-sonar-prop-setting.addTestExclusion",
          "group": "sonar@3"
        },
        {
          "command": "easy-sonar-prop-setting.clearAndAddSonarPath",
          "group": "sonar@4",
          "when": "config.easySonarPropSetting.enableClearFunction"
        },
        {
          "command": "easy-sonar-prop-setting.clearAndAddTestInclusion",
          "group": "sonar@5",
          "when": "config.easySonarPropSetting.enableClearTestInclusion"
        },
        {
          "command": "easy-sonar-prop-setting.clearAndAddTestExclusion",
          "group": "sonar@6",
          "when": "config.easySonarPropSetting.enableClearTestExclusion"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Easy Sonar Prop Setting",
      "properties": {
        "easySonarPropSetting.envFileName": {
          "type": "string",
          "default": ".env",
          "description": "The name of the setting file."
        },
        "easySonarPropSetting.sonarPathKey": {
          "type": "string",
          "default": "sonar.path",
          "description": "The key for the sonar path."
        },
        "easySonarPropSetting.testInclusionKey": {
          "type": "string",
          "default": "test.inclusion",
          "description": "The key for the test inclusion path."
        },
        "easySonarPropSetting.testExclusionKey": {
          "type": "string",
          "default": "test.exclusion",
          "description": "The key for the test exclusion path."
        },
        "easySonarPropSetting.enableClearFunction": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the clear function."
        },
        "easySonarPropSetting.enableClearTestInclusion": {
          "type": "boolean",
          "default": false,
          "description": "Enable or disable the clear function for test inclusion."
        },
        "easySonarPropSetting.enableClearTestExclusion": {
          "type": "boolean",
          "default": false,
          "description": "Enable or disable the clear function for test exclusion."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
